{
	"manifest_version": 2,
	"name": "Send Link",
	"description": "Send links via customizable context menu entries as GET requests (mailto: is also supported).",
	"version": "1.1.0",
	"author": "Bernd Bestel",
	"homepage_url": "https://github.com/berrnd/send-link",
	"applications": {
		"gecko": {
			"id": "{136e3622-5051-49cf-b866-9750f49aa835}"
		}
	},
	"permissions": [
		"contextMenus",
		"storage",
		"tabs",
		"activeTab"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	}
}
